# change window focus
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# swap managed window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move managed window
meh - h : yabai -m window --warp west
meh - j : yabai -m window --warp south
meh - k : yabai -m window --warp north
meh - l : yabai -m window --warp east

# move focused window to workspace
alt + shift - 1 : yabai -m window --space 1
alt + shift - 2 : yabai -m window --space 2
alt + shift - 3 : yabai -m window --space 3
alt + shift - 4 : yabai -m window --space 4
alt + shift - 5 : yabai -m window --space 5
alt + shift - 6 : yabai -m window --space 6
alt + shift - 7 : yabai -m window --space 7
alt + shift - 8 : yabai -m window --space 8
alt + shift - 9 : yabai -m window --space 9
alt + shift - 0 : yabai -m window --space 10

# set insertion point in the focused window
alt + ctrl - h : yabai -m window --insert west
alt + ctrl - j : yabai -m window --insert south
alt + ctrl - k : yabai -m window --insert north
alt + ctrl - l : yabai -m window --insert east

# rotate the focused window
alt - r : yabai -m space --rotate 90
alt + shift - r : yabai -m space --rotate 90

# resize on x and y axis
alt + shift - x : yabai -m space --mirror x-axis
alt + shift - y : yabai -m space --mirror y-axis

# balance the size of the windows
alt + shift - b : yabai -m space --balance

# toggle fullscreen mode for the focused window
alt - f : yabai -m window --toggle zoom-fullscreen
alt + shift - f : yabai -m window --toggle native-fullscreen

# close the focused window
alt - w : yabai -m window --close

# go to the next or previous space
alt - n : yabai -m space --focus next
alt - p : yabai -m space --focus prev

# change the space layout
alt - e : yabai -m space --layout bsp
alt - l : yabai -m space --layout float
alt - s : yabai -m space --layout stack

# resize windows
hyper - h : yabai -m window --resize left:-50:0; \
            yabai -m window --resize right:-50:0
hyper - j : yabai -m window --resize bottom:0:50; \
            yabai -m window --resize top:0:50
hyper - k : yabai -m window --resize top:0:-50; \
            yabai -m window --resize bottom:0:-50
hyper - l : yabai -m window --resize right:50:0; \
            yabai -m window --resize left:50:0
